.logo_bg{
  width:750rpx;
}
.logo_section{
  text-align:center;
  position:absolute;
  top:140rpx;
  left:50%;
  margin-left:-120rpx;
}
.logo{
  width:142rpx;
  display:block;
  margin:0 auto 25rpx;
}
.logo_text{
  width:240rpx;
  display:block;
  margin:0 auto;
}
/* form */
.form{
  width:580rpx;
  margin:90rpx auto 0;
}
.account_section{
  height:74rpx;
  position:relative;
  border-bottom:1rpx solid #CCCCCC;
}
.account_icon{
  width:36rpx;
  position:absolute;
  left:28rpx;
  bottom:22rpx;
}
.account{
  height:66rpx;
  padding-left:88rpx;
}
.pwd_section{
  height:74rpx;
  position:relative;
  border-bottom:1rpx solid #CCCCCC;
  margin-top:14rpx;
}
.pwd_icon{
  width:32rpx;
  position:absolute;
  left:28rpx;
  bottom:20rpx;
}
.pwd{
  height:66rpx;
  padding-left:88rpx;
}
.login_btn{
  width:580rpx;
  height:96rpx;
  color:#fff;
  background:#5EA3FE;
  border-radius:95rpx;
  margin-top:68rpx;
  box-shadow:0px 6px 10px 0px rgba(94,163,254,0.5);
  letter-spacing:10rpx;
}

.error{
  height:19rpx;
  color:red;
  font-size:24rpx;
  padding:4rpx 0  0 88rpx;
  
}